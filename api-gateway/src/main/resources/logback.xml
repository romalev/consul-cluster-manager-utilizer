<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender" level="ALL">
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="io.vertx" level="ALL" additivity="false">
    <appender-ref ref="STDOUT"/>
  </logger>
</configuration>
